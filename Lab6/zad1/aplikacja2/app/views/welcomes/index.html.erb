<h1>Welcomes#index</h1>
<p>Find me in app/views/welcomes/index.html.erb</p>

<% for i in @welcomes %>
    <p><%= i.message %></p>
<% end %>
 
<%= form_with url: welcomes_index_path, method: :get, local: true do |form| %>
    <!-- Tutaj umieść wywołanie pomocnika 'collection_select()' lub 'select()' -->
    <%= collection_select("welcome", "category_id", @categories, :id, :name) %>
    <%= form.submit %>
<% end %>